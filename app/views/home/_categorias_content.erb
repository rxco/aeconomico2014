<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Categorias</h1>
    </div>
</div>

<div class="row">
	<div class="col-lg-12 text-right">
		<button class="btn btn-primary" data-toggle="modal" data-target="#newCategory">
			Nueva Categoria
		</button>
	</div>
</div>
<br>
<div class="table-responsive">
	<table class="table table-striped table-bordered table-hover dataTable no-footer">
		<tr>
			<th>Descripción Español</th>
			<th>Descripción Inglés</th>
			<th width= "132px"></th>
		</tr>
	  	<% Category.all.each do |cat| %>
	  	<tr>
		 	<td><%= cat.es_description %></td>
		 	<td><%= cat.en_description %></td>
		 	<td>
		 		<%= link_to 'Editar', edit_category_path(cat),:class=>"btn btn-warning btn-sm" %>
	     		<%= link_to 'Borrar', cat, method: :delete, data: { confirm: '¿Estás seguro de eliminar?' },:class=>"btn btn-danger btn-sm" %>
		 	</td>
	  	</tr>
		<% end %>
	</table>
</div>

<!-- Modal Nuevo -->
<div class="modal fade" id="newCategory" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Nueva Categoria</h4>
      </div>
      <div class="modal-body">
        <%= render :partial => '/categories/form' %>
      </div>
    </div>
  </div>
</div>