<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Contenidos</h1>
    </div>
</div>
<h5>Selecciona un subcapitulo </h5>
<% Subchapter.all.each do |sb|%>
	<button class="subchapter_choose_content btn btn-default" sb-id="<%= sb.id %>" data-toggle="modal" data-target="#newContent"> <%= sb.es_description%></button>
<% end %>
<br>
<br>
<br>

<div id="container_content_by_subchapter">
	

	<div id="contenidos_load" style="display:none; margin-bottom:10px;">
		<h3> Contenidos existentes</h3>
		<div class="table-responsive">
  <table id="lista_contenidos_por_subcapitulo" class="table table-striped table-bordered table-hover dataTable no-footer">
			<thead>
				<td>Desc Español</td>
				<td>Desc Inglès</td>
				<td>Subcapitulo</td>
				<td>Url Imagen</td>
				<td>Tipo Contenido</td>
				<td>Orden</td>
			</thead>
			<tbody></tbody>
		</table>
</div>
		<br>
	</div>
<hr width="100%">
	<div id="contenidos_new" style="display:none; margin-top:10px; width:200px;">
		<h3> Crear Nuevo Contenido</h3>
		
	</div>


<!-- Modal Nuevo -->
<div class="modal fade" id="newContent" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Nuevo Contenido</h4>
      </div>
      <div class="modal-body">
        <%= render :partial => '/contents/form_ajax',locals: {_content_var: Content.new} %>
      </div>
    </div>
  </div>
</div>

</div>