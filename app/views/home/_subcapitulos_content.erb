<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Sub Capitulos</h1>
    </div>
</div>

<div class="row">
  <div class="col-lg-12 text-right">
    <button class="btn btn-primary" data-toggle="modal" data-target="#newSubChapter">
      Nuevo Sub Capitulo
    </button>
  </div>
</div>
<br>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover dataTable no-footer">
    <tr>
      <th>Descripción Español</th>
      <th>Descripción Inglés</th>
      <th></th>
    </tr>
    <% Subchapter.all.each do |subchapter| %>
      <tr>
        <td><%= subchapter.es_description %></td>
        <td><%= subchapter.en_description %></td>
        <td>
          <%= link_to 'Editar', edit_subchapter_path(subchapter) %>
          <%= link_to 'Borrar', subchapter, method: :delete, data: { confirm: '¿Estás seguro de eliminar?' } %></td>
      </tr>
      <% end %>
  </table>
</div>

<!-- Modal Nuevo -->
<div class="modal fade" id="newSubChapter" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Nuevo Sub Capitulo</h4>
      </div>
      <div class="modal-body">
        <%= render :partial => '/subchapters/form_ajax',locals: {_subchapter_var: Subchapter.new} %>
      </div>
    </div>
  </div>
</div>