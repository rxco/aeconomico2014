<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Perfiles</h1>
    </div>
</div>

<div class="row">
  <div class="col-lg-12 text-right">
    <button class="btn btn-primary" data-toggle="modal" data-target="#newProfile">
      Nuevo Perfil
    </button>
  </div>
</div>
<br>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover dataTable no-footer">
    <tr>
      <th>Descripción Español</th>
      <th>Descripción Inglés</th>
      <th></th>
    </tr>
    <% Profile.all.each do |profile| %>
      <tr>
        <td><%= profile.es_description %></td>
        <td><%= profile.en_description %></td>
        <td>
          <%= link_to 'Editar', edit_profile_path(profile) %>
          <%= link_to 'Borrar', profile, method: :delete, data: { confirm: '¿Estás seguro de eliminar??' } %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<!-- Modal Nuevo -->
<div class="modal fade" id="newProfile" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Nuevo Perfil</h4>
      </div>
      <div class="modal-body">
        <%= render :partial => '/profiles/form_ajax',locals: {_profile_var: Profile.new} %>
      </div>
    </div>
  </div>
</div>