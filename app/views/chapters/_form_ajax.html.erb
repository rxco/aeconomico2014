<%= form_for(_chapter_var) do |f| %>
  <% if _chapter_var.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(_chapter_var.errors.count, "error") %> prohibited this chapter from being saved:</h2>
      <ul>
      <% _chapter_var.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <label for="disabledTextInput">Descripción español</label>
      <%= f.text_field :es_description, :class => "form-control ", :placeholder => "Descripción español", :required => "required" %>
    </div>
    <div class="form-group">
      <label for="disabledTextInput">Descripción ingles</label>
      <%= f.text_field :en_description, :class => "form-control ", :placeholder => "Descripción ingles", :required => "required" %>
    </div>
    <div class="form-group">
      <label for="disabledTextInput">Capitulo</label>
      <%= f.collection_select(:category_id, Category.all, :id, :es_description) %>
    </div>
    <div class="form-group">
      <label for="disabledTextInput">Versión</label>
      <%= f.collection_select(:version_id, Version.all, :id, :year) %>
    </div>

  <div class="actions">
    <%= f.submit :value => "Guardar",:class => "btn btn-primary" %>
      <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
  </div>
<% end %>